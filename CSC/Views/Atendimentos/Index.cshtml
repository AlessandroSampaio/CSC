<div class="container">
    <div class="form-row">
        <div class="col-12">
            <div class="input-group">
                <div class="input-group-prepend">
                    <select class="form-control form-control-sm" id="slctOption">
                        <option class="form-control form-control-sm" value="0">Id</option>
                        <option class="form-control form-control-sm" value="1">Analista</option>
                        <option class="form-control form-control-sm" value="2">Cliente</option>
                    </select>
                </div>
                <input type="text" class="form-control" id="txtSearch" />
                <div class="input-group-append">
                    <button class="btn btn-primary" id="btnNovo">Novo</button>
                </div>
            </div>
        </div>
    </div>
    <br />
</div>


<table class="table table-striped table-bordered table-hover" id="TbAtendimentos" style="width:100%">
    <thead class="thead-light">
        <tr>
            <th>ID</th>
            <th>Funcionario</th>
            <th>Cliente</th>
            <th>Data de Abertura</th>
            <th>Status</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section Modals
    {
    <!-- modal localizacao de clientes -->
    <div class="modal fade" tabindex="-1" role="dialog" id="ClientSelect">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <table class="table table-striped table-bordered table-hover" id="TbClientes" style="width:100%">
                        <thead class="thead-light">
                            <tr>
                                <th>Id</th>
                                <th>CNPJ</th>
                                <th>Razao Social</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!--Modal para transferencia de atendimentos-->
    <div class="modal fade" tabindex="-1" role="dialog" id="TransferirAtendimento">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <h4>Transferência de Atendimento</h4>
                    <form>
                        <div class="row">
                            <div class="col-12">
                                <label class="col-form-label">De:</label>
                                <input type="text" class="form-control text-center" id="FuncionarioOrigem" name="FuncinarioOrigem" readonly />
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-12 text-center">
                                <i class="fas fa-angle-double-down fa-2x"></i>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <label class="col-form-label">Para:</label>
                                <select id="funcDestino" asp-items="@ViewBag.Funcionarios" class="form-control"></select>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <button id="btnTransferir" type="button" class="btn btn-block btn-primary">Transferir</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

}

@section Scripts {
    @if (User.IsInRole("Admin"))
    {
        <script type="text/javascript" src="~/js/AdminAtendimentos.js"></script>
    }
    else
    {
        <script type="text/javascript" src="~/js/Atendimentos.js"></script>
    }}
