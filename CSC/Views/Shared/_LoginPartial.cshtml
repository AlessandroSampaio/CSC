@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav navbar-right float-right float-sm-right">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="dropdown">
            <a href="#" data-toggle="dropdown" class="nav-link dropdown-toggle nav-link-lg nav-link-user" id="btnUserLogonInfo">
                <img alt="image" src="~/dist/img/avatar/avatar-1.png" width="30" class="rounded-circle mr-1">
                <div class="d-sm-none d-lg-inline-block"><p id="UserLoggedIn">@User.Identity.Name</p></div>
                <input type="hidden" id="userLogado" value="ViewBag.user.FuncionarioId" />
            </a>
            <div class="dropdown-menu dropdown-menu-right">
                <div class="dropdown-title" id="UserLogonInfo">Testando</div>
                <a asp-controller="Usuarios" asp-action="Perfil" class="dropdown-item has-icon">
                    <i class="far fa-user"></i> Profile
                </a>
                <a href="features-activities.html" class="dropdown-item has-icon">
                    <i class="fas fa-bolt"></i> Activities
                </a>
                <a href="features-settings.html" class="dropdown-item has-icon">
                    <i class="fas fa-cog"></i> Settings
                </a>
                <div class="dropdown-divider"></div>
                <form class="form-inline" asp-controller="Home" asp-action="Logout" id="formLogout">
                    <button type="submit" class="dropdown-item has-icon text-danger" style="cursor:pointer">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </button>
                </form>
            </div>
        </li>
    }
</ul>