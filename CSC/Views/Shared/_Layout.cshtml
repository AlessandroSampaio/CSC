<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport">
    <title>CSC</title>

    <!-- General CSS Files -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/fonts/font-awesome/css/all.min.css">

    <!-- Plugins -->
    <link rel="stylesheet" type="text/css" href="~/lib/jquery-datatables/DataTables/css/dataTables.bootstrap4.min.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/jquery-datatables/Buttons/css/buttons.bootstrap4.min.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/jquery-datatables/ColReorder/css/colReorder.bootstrap4.min.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/jquery-datatables/FixedHeader/css/fixedHeader.bootstrap4.min.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/jquery-datatables/RowReorder/css/rowReorder.bootstrap4.min.css" />

    <!-- Template CSS -->
    <link rel="stylesheet" href="~/dist/css/style.css">
    <link rel="stylesheet" href="~/dist/css/components.css">
</head>

<body>
    <div id="app">
        <div class="main-wrapper">
            <div class="navbar-bg"></div>
            <nav class="navbar navbar-expand-lg main-navbar">
                <form class="form-inline mr-auto">
                    <ul class="navbar-nav mr-3">
                        <li><a href="#" data-toggle="sidebar" class="nav-link nav-link-lg"><i class="fas fa-bars"></i></a></li>
                        <li><a href="#" data-toggle="search" class="nav-link nav-link-lg d-sm-none"><i class="fas fa-search"></i></a></li>
                    </ul>
                    <div class="search-element">
                        <input class="form-control" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn" type="submit"><i class="fas fa-search"></i></button>
                    </div>
                </form>
                <ul class="navbar-nav navbar-right">

                    <li class="dropdown">
                        <a href="#" data-toggle="dropdown" class="nav-link dropdown-toggle nav-link-lg nav-link-user" id="btnUserLogonInfo">
                            <img alt="image" src="~/dist/img/avatar/avatar-1.png" width="30" class="rounded-circle mr-1">
                            <div class="d-sm-none d-lg-inline-block">Olá, @ViewBag.user.NomeLogon</div>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right">
                            <div class="dropdown-title" id="UserLogonInfo">Testando</div>
                            <a href="features-profile.html" class="dropdown-item has-icon">
                                <i class="far fa-user"></i> Profile
                            </a>
                            <a href="features-activities.html" class="dropdown-item has-icon">
                                <i class="fas fa-bolt"></i> Activities
                            </a>
                            <a href="features-settings.html" class="dropdown-item has-icon">
                                <i class="fas fa-cog"></i> Settings
                            </a>
                            <div class="dropdown-divider"></div>
                            <a asp-controller="Home" asp-action="Logout" class="dropdown-item has-icon text-danger">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </a>
                        </div>
                    </li>
                </ul>
            </nav>
            <div class="main-sidebar">
                <aside id="sidebar-wrapper">
                    <div class="sidebar-brand">
                        <a asp-action="index">CSC</a>
                    </div>
                    <div class="sidebar-brand sidebar-brand-sm">
                        <a asp-action="index"></a>
                    </div>
                    <ul class="sidebar-menu">
                        <li class="menu-header">Geral</li>
                        <li class="nav-link"><a asp-controller="Home" asp-action="Index" class="nav-link"><span>Painel de Controle</span></a></li>
                        <li class="menu-header">Pessoas</li>
                        <li class="nav-link"><a class="nav-link" asp-controller="Funcionarios" asp-action="Index"><span>Funcionarios</span></a></li>
                        <li class="nav-link"><a class="nav-link" asp-controller="Usuarios" asp-action="Index">Usuarios</a></li>
                        <li class="nav-link"><a class="nav-link" asp-controller="Clientes" asp-action="Index">Clientes</a></li>
                    </ul>
                </aside>
            </div>

            <!-- Main Content -->
            <div class="main-content">
                <section class="section">
                    <div class="section-header">
                        <h1>@ViewBag.Controller</h1>
                    </div>
                    <div class="section-body">
                        @RenderBody()
                    </div>
                </section>
                @RenderSection("Modals", required: false)
            </div>
            <footer class="main-footer">
                <div class="footer-left">
                    Copyright © 2018 <div class="bullet"></div> Design By <a href="https://nauval.in/">Muhamad Nauval Azhar</a>
                </div>
                <div class="footer-right">
                    v2.0.0
                </div>
            </footer>
        </div>
    </div>

    <!-- General JS Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/popper/popper.min.js"></script>
    <script src="~/lib/tooltip/tooltip.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery-nicescroll/jquery.nicescroll.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.11.2/moment.min.js"></script>
    <!--<script type="text/javascript" src="~/lib/moment/moment-with-locales.js"></script>-->
    <script src="~/dist/js/stisla.js"></script>

    <!-- Plugins -->
    <script type="text/javascript" src="~/lib/jquery-datatables/JSZip/jszip.min.js"></script>
    <script type="text/javascript" src="~/lib/jquery-datatables/pdfmake/pdfmake.min.js"></script>
    <script type="text/javascript" src="~/lib/jquery-datatables/pdfmake/vfs_fonts.js"></script>
    <script type="text/javascript" src="~/lib/jquery-datatables/DataTables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/lib/jquery-datatables/DataTables/js/dataTables.bootstrap4.min.js"></script>
    <script type="text/javascript" src="~/lib/jquery-datatables/Buttons/js/dataTables.buttons.min.js"></script>
    <script type="text/javascript" src="~/lib/jquery-datatables/Buttons/js/buttons.bootstrap4.min.js"></script>
    <script type="text/javascript" src="~/lib/jquery-datatables/Buttons/js/buttons.html5.min.js"></script>
    <script type="text/javascript" src="~/lib/jquery-datatables/Buttons/js/buttons.print.min.js"></script>
    <script type="text/javascript" src="~/lib/jquery-datatables/ColReorder/js/dataTables.colReorder.min.js"></script>
    <script type="text/javascript" src="~/lib/jquery-datatables/FixedHeader/js/dataTables.fixedHeader.min.js"></script>
    <script type="text/javascript" src="~/lib/jquery-datatables/RowReorder/js/dataTables.rowReorder.min.js"></script>
    <script src="//cdn.datatables.net/plug-ins/1.10.12/sorting/datetime-moment.js"></script>
    <!--<script type="text/javascript" src="~/lib/jquery-datatables/datetime.js"></script>-->


    <!-- Template JS File -->
    <script src="~/dist/js/scripts.js"></script>
    <script src="~/dist/js/custom.js"></script>
    <script src="~/fonts/font-awesome/js/all.min.js"></script>

    <!-- Page Specific JS File -->
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>