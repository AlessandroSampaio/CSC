<div class="container-fluid">
    <form method="post" target="_blank">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Período :</h3>
            </div>
            <div class="card-body">
                <div class="form-row">
                    <div class="col-2">
                        <label class="col-form-label">De :</label>
                        <div id="datai" class="input-group date">
                            <input id="DataInicial" type="text" class="form-control" name="DataInicial" required />
                            <span class="input-group-addon" style="position:absolute; right:5px;"><i class="fa fa-calendar"></i></span>
                        </div>
                    </div>
                    <div class="col-2">
                        <label class="col-form-label">Até :</label>
                        <div id="dataf" class="input-group date">
                            <input id="DataFinal" type="text" class="form-control" name="DataFinal" required />
                            <span class="input-group-addon" style="position:absolute; right:5px;"><i class="fa fa-calendar"></i></span>
                        </div>
                    </div>
                    <div class="col-5">
                        <label class="col-form-label">Analista:</label>
                        <select id="Analista" name="Analista" asp-items="@ViewBag.Funcionarios" class="form-control">
                            <option value="0">Todos</option>
                        </select>
                    </div>

                </div>
                <div class="form-row">
                    <div class="col-2">
                        <label>&nbsp;</label>
                        <button type="button" id="btnPesquisar" class="btn btn-block btn-primary">Gerar</button>
                    </div>
                    <div class="col-2">
                        <label>&nbsp;</label>
                        <button type="submit" asp-action="DesempenhoAnalistaPDF" id="btnImprimir" class="btn btn-block btn-primary">Imprimir</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<div id="content">

</div>
@section Scripts{
    <script type="text/javascript" src="~/js/DesempenhoAnalista.js"></script>
}

