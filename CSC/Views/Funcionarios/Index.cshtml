@model IEnumerable<CSC.Models.Funcionario>

<table class="table table-sm table-hover" id="TbFuncionarios">
    <thead class="thead-dark rounded">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Admissao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Demissao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Veiculo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Admissao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Demissao)
                </td>
                <td>
                    @if (item.Veiculo)
                    {
                        <i class="fas fa-check" style="color: green;"></i>
                    }
                    else
                    {
                        <i class="fas fa-times" style="color: red;"></i>
                    }
                </td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.Id"><i class="fas fa-pen"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Novo" class="btn btn-primary float-right">Novo</a>
@section Scripts {
    <script type="text/javascript" src="~/js/tables.js"></script>
}